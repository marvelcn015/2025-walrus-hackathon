# =============================================================================
# Sui Blockchain Configuration
# =============================================================================
# Network selection: "devnet" | "testnet" | "mainnet"
SUI_NETWORK="testnet"

# Sui RPC endpoint (optional, uses default network endpoint if not specified)
SUI_RPC_URL="https://fullnode.testnet.sui.io:443"

# Backend wallet private key for server-side operations (KEEP SECRET!)
# WARNING: Only use for non-critical operations. Users should sign their own transactions when possible.
# Format: base64-encoded Ed25519 private key
SUI_BACKEND_PRIVATE_KEY=""

# =============================================================================
# Walrus Storage Configuration
# =============================================================================
# Walrus aggregator endpoint for uploading blobs
# Testnet: https://aggregator-testnet.walrus.space
# Mainnet: TBD (update when available)
WALRUS_AGGREGATOR_URL="https://aggregator-testnet.walrus.space"

# Walrus publisher endpoint for storing blobs (optional, uses aggregator if not set)
WALRUS_PUBLISHER_URL=""

# Walrus API key (if required by your aggregator/publisher)
WALRUS_API_KEY=""

# Number of epochs to store blobs (default: 1)
WALRUS_STORAGE_EPOCHS="1"

# Maximum file size for uploads in bytes (default: 100MB)
WALRUS_MAX_FILE_SIZE="104857600"

# =============================================================================
# Seal Encryption Configuration
# =============================================================================
# Seal Key Server Object IDs (comma-separated Sui object IDs of key servers)
# Example testnet key servers:
# - 0x73d05d62c18d9374e3ea529e8e0ed6161da1a141a94d3f76ae3fe4e99356db75
# - 0xf5d14a81a982144ae441cd7d64b09027f116a468bd36e7eca494f750591623c8
SEAL_KEY_SERVER_OBJECT_IDS="0x73d05d62c18d9374e3ea529e8e0ed6161da1a141a94d3f76ae3fe4e99356db75,0xf5d14a81a982144ae441cd7d64b09027f116a468bd36e7eca494f750591623c8"

# Package ID where whitelist module is deployed
# This will be set after deploying the Move contract
SEAL_PACKAGE_ID=""

# Seal Policy Object ID (Whitelist object ID for access control)
# This will be set after creating a whitelist using the deployed contract
SEAL_POLICY_OBJECT_ID=""

# Seal encryption mode: "frontend" (client-side) | "backend" (server-side) | "hybrid" (both)
SEAL_ENCRYPTION_MODE="hybrid"

# =============================================================================
# Application Configuration
# =============================================================================
# Default encryption mode for /walrus/upload endpoint
# Options: "client_encrypted" | "server_encrypted"
DEFAULT_UPLOAD_MODE="client_encrypted"

# Enable server-side encryption (set to "false" to disable backend encryption option)
ENABLE_SERVER_ENCRYPTION="true"

# JWT secret for API authentication (generate a strong random string)
JWT_SECRET="your_jwt_secret_here_change_in_production"

# API request timeout in milliseconds
API_TIMEOUT="30000"

# =============================================================================
# Development & Debugging
# =============================================================================
# Enable debug logging for Walrus operations
DEBUG_WALRUS="false"

# Enable debug logging for Seal operations
DEBUG_SEAL="false"

# Enable verbose API logging
DEBUG_API="false"

TEST_PACKAGE_ID=
TEST_WHITELIST_ID=
TEST_CAP_ID=